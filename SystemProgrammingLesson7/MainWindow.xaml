<Window x:Class="SystemProgrammingLesson7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemProgrammingLesson7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel>
        <ComboBox Name="authorsComboBox" SelectionChanged="authorsComboBox_SelectionChanged"></ComboBox>
         
        </DockPanel>
        <DockPanel Grid.Row="1" LastChildFill="False">
            <TextBox x:Name="nameTxtBox" Width="700"></TextBox>
            <Button x:Name="findBtn" Width="90" Click="findBtn_Click">Find</Button>
        </DockPanel>
        
        <ListBox Name="booksListBox" SelectionChanged="booksListBox_SelectionChanged" Grid.Row="2"></ListBox>   
